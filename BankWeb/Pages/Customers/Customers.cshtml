@page
@model CustomersModel
@{
    Layout = "_DashboardLayout";
}

<h1>All Customers</h1>
<h3>Page @Model.CurrentPage</h3>
<form method="get">
    <input asp-for="@Model.SearchBox" />
    <input type="hidden" asp-for="@Model.CustomerId" />
    <input type="submit" value="Search" />
</form>

    <a class="btn btn-secondary"
       asp-page="/Dashboard/IndexDashboard">
        Back
    </a>
<a class="btn btn-success" asp-page="/CustomerCard/NewCustomer">Add customer</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">
                Customer Name
                <a asp-page="/Customers/Customers"
                   asp-route-searchBox="@Model.SearchBox"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers/Customers"
                   asp-route-searchBox="@Model.SearchBox"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                City
                <a asp-page="/Customers/Customers"
                   asp-route-searchBox="@Model.SearchBox"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers/Customers"
                   asp-route-searchBox="@Model.SearchBox"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                Country
                <a asp-page="/Customers/Customers"
                   asp-route-searchBox="@Model.SearchBox"
                   asp-route-sortColumn="Country"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers/Customers"
                   asp-route-searchBox="@Model.SearchBox"
                   asp-route-sortColumn="Country"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>

            <th></th>
            


        </tr>

    </thead>

    <tbody>

        @foreach (var cust in Model.customers)
        {
            <tr>
                <td>@cust.Id</td>
                <td>@cust.Name</td>
                <td>@cust.City</td>
                <td>@cust.Country</td>
                <td><a asp-page="/CustomerCard/Customer" asp-route-id="@cust.Id" class="btn btn-primary">View Details</a></td>
            </tr>
        }
        <tr>
            <td>
                @if (Model.CurrentPage != 1)
                {
                    <a class="btn btn-secondary"
                       asp-page="/Customers/Customers" asp-route-customerId="@Model.CustomerId"
                       asp-route-searchBox="@Model.SearchBox"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-pageNo="@(Model.CurrentPage-1)">
                        Prev
                    </a>
                }
            </td>
            <td></td>
            <td></td>
            <td>
                <a class="btn btn-secondary"
                   asp-page="/Customers/Customers" asp-route-customerId="@Model.CustomerId"
                   asp-route-searchBox="@Model.SearchBox"
                   asp-route-sortColumn="@Model.SortColumn"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-pageNo="@(Model.CurrentPage+1)">
                    Next
                </a>
            </td>
            <td></td>
        </tr>
        <tr>
            
        </tr>

    </tbody>
</table>