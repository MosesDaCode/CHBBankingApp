@page
@model BankWeb.Pages.CustomerCard.NewCustomerModel
@{
    Layout = "_DashboardLayout";
}

<div class="card">
    <div class="card-header">
        <h1>New Customer</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="CustomerVm.FirstName">Firstname</label>
                <input class="form-control" asp-for="CustomerVm.FirstName">
                <span asp-validation-for="CustomerVm.FirstName" class="field-validation-error"></span>
            </div><div class="form-group">
                <label asp-for="CustomerVm.LastName">Lastname</label>
                <input class="form-control" asp-for="CustomerVm.LastName">
                <span asp-validation-for="CustomerVm.LastName" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerVm.Emailaddress">Email</label>
                <input class="form-control" asp-for="CustomerVm.Emailaddress">
                <span asp-validation-for="CustomerVm.Emailaddress" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerVm.StreetAdress">StreetAddress</label>
                <input class="form-control" asp-for="CustomerVm.StreetAdress">
                <span asp-validation-for="CustomerVm.StreetAdress" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerVm.PostalCode">Zipcode</label>
                <input class="form-control" asp-for="CustomerVm.PostalCode">
                <span asp-validation-for="CustomerVm.PostalCode" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerVm.City">City</label>
                <input class="form-control" asp-for="CustomerVm.City">
                <span asp-validation-for="CustomerVm.City" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerVm.CountryCode">Country Code</label>
                <input class="form-control" asp-for="CustomerVm.CountryCode">
                <span asp-validation-for="CustomerVm.CountryCode" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerVm.Birthday">Birthday</label>
                <input class="form-control" asp-for="CustomerVm.Birthday">
                <span asp-validation-for="CustomerVm.Birthday" class="field-validation-error"></span>
            </div>

            <button type="submit" class="btn">Save</button>
        </form>
    </div>
</div>

